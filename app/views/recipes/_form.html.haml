= form_for @recipe do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@recipe.errors.count, "error")} prohibited this recipe from being saved:"
      %ul
        - @recipe.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :postman_user_id, 'Enter your Postman User ID:'
    = f.text_field :postman_user_id, class: 'form-control'

  .form-group
    %h5.mt-5 Enter your Intake levels:
    .row
      .col
        = f.label :IntakeVitC, 'Vitamin C'
        = f.select :IntakeVitC, (4..10), {}, class: 'form-control'
      .col
        = f.label :IntakeVitD3, 'Vitamin D3'
        = f.select :IntakeVitD3, (4..10), {}, class: 'form-control'
      .col
        = f.label :IntakeIron, 'Iron' 
        = f.select :IntakeIron, (4..10), {}, class: 'form-control'
  .form-group
    %h5.mt-5 Enter your Activity levels: 
    .row
      .col
        = f.label :ActivityVitC, 'Vitamin C'
        = f.select :ActivityVitC, (1..3), {}, class: 'form-control'
      .col
        = f.label :ActivityVitD3, 'Vitamin D3'
        = f.select :ActivityVitD3, (1..3), {}, class: 'form-control'
      .col
        = f.label :ActivityIron, 'Iron'
        = f.select :ActivityIron, (1..3), {}, class: 'form-control'
     

  .form-group.text-center.my-4
    = f.button buttoncaption, class: 'btn btn-success'
