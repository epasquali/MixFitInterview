= render 'layouts/stdheader'
  

.container-fluid

  -flash.each do |name, msg|
    = content_tag :div, class: [:alert, 'alert-dismissible', 'fade', 'show', alert_for(name)] do
      = msg
      %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => 'true'}
          &times;

  = yield